{% trans_default_domain 'prompts' %}

<nav class="navbar navbar-expand-lg navbar-light dashboard-list">
	<h2>{{ 'title.product.pl'|trans|capitalize }}</h2>
	<button type="button" item="0" data-toggle="modal" data-target="#modal_dialog"  class="btn btn-success oi oi-plus" title="{{ 'title.create'|trans|capitalize }}"></button>
</nav>

<table id="product_table" class="table table-striped table-bordered compact">
	<thead class="thead-light">
		<tr>
			<th scope="col" rowspan="2">{{ 'form.denomination'|trans|capitalize }}</th>
			<th scope="col" rowspan="2">{{ 'form.article'|trans|capitalize }}</th>
			<th scope="col" colspan="2">{{ 'form.price'|trans|capitalize }}</th>
			<th scope="col" colspan="3">{{ 'form.quantity'|trans|capitalize }}</th>
		</tr>
		<tr>
			<th scope="col">{{ 'form.wholesale'|trans|capitalize }}</th>
			<th scope="col">{{ 'form.retail'|trans|capitalize }}</th>
			<th scope="col">{{ 'form.packs'|trans|capitalize }}</th>
			<th scope="col">{{ 'form.in_pack'|trans|capitalize }}</th>
			<th scope="col">{{ 'form.out_pack'|trans|capitalize }}</th>
		</tr>
	</thead>
	<tbody>

	<!--TODO: Replace HTML creation by JSON object. -->

		{% for product in products %}
		<tr item="{{ product.id }}" data-toggle="modal" data-target="#modal_dialog">
			<td>{{ product.name }}</td>
			<td>{{ product.article }}</td>
			<td class="td-num">{{ product.tradePrice }}</td>
			<td class="td-num">{{ product.price }}</td>
			<td class="td-num">{{ product.packs }}</td>
			<td class="td-num">{{ product.inPack }}</td>
			<td class="td-num">{{ product.outPack }}</td>
		</tr>
		{% endfor %}
	</tbody>
</table>